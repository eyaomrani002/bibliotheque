<!-- Modal pour la notation -->
<div id="ratingModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 max-w-md w-full mx-4">
        <h3 class="text-2xl font-bold mb-4 text-gray-800 dark:text-white">Donner votre avis</h3>
        
        <form id="ratingForm">
            <input type="hidden" name="livre_id" id="ratingLivreId">
            
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Note</label>
                <div class="flex justify-center space-x-2" id="starRating">
                    {% for i in 1..5 %}
                        <button type="button" class="text-3xl text-gray-300 hover:text-yellow-400 transition" data-rating="{{ i }}">
                            <i class="far fa-star"></i>
                        </button>
                    {% endfor %}
                </div>
                <input type="hidden" name="note" id="selectedRating" required>
            </div>
            
            <div class="mb-6">
                <label for="comment" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Commentaire (optionnel)
                </label>
                <textarea name="comment" id="comment" rows="3" 
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                    placeholder="Partagez votre expÃ©rience avec ce livre..."></textarea>
            </div>
            
            <div class="flex gap-3">
                <button type="button" onclick="closeRatingModal()" 
                    class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                    Annuler
                </button>
                <button type="submit" 
                    class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition">
                    Envoyer l'avis
                </button>
            </div>
        </form>
    </div>
</div>