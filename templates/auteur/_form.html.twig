{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {# Champ Nom #}
        <div class="space-y-2">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        {# Champ Prénom #}
        <div class="space-y-2">
            {{ form_label(form.prenom, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200'}}) }}
            {{ form_errors(form.prenom) }}
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {# Champ Date de naissance #}
        <div class="space-y-2">
            {{ form_label(form.dateNaissance, 'Date de naissance', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
            {{ form_widget(form.dateNaissance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200'}}) }}
            {{ form_errors(form.dateNaissance) }}
        </div>

        {# Champ Nationalité #}
        <div class="space-y-2">
            {{ form_label(form.nationalite, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
            {{ form_widget(form.nationalite, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200'}}) }}
            {{ form_errors(form.nationalite) }}
        </div>
    </div>

    {# Champ Email #}
    <div class="space-y-2">
        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200'}}) }}
        {{ form_errors(form.email) }}
    </div>

    {# Champ Biographie #}
    <div class="space-y-2">
        {{ form_label(form.biographie, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
        {{ form_widget(form.biographie, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 min-h-[120px]'}}) }}
        {{ form_errors(form.biographie) }}
    </div>

    {# Champ Photo (upload) #}
    <div class="space-y-2 bg-gray-50 p-4 rounded-lg">
        <label class="block text-sm font-semibold text-gray-700">Photo</label>

        <div class="flex items-start gap-6">
            {% if auteur.photo %}
                <div class="flex-shrink-0">
                    <img src="{{ asset('uploads/auteurs/' ~ auteur.photo) }}" alt="Photo auteur" class="h-28 w-28 object-cover rounded-full border-4 border-white shadow-lg">
                    <p class="text-xs text-gray-500 text-center mt-2">Photo actuelle</p>
                </div>
            {% endif %}

            <div class="flex-1">
                {{ form_row(form.imageFile, {
                    'attr': {
                        'class': 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-white focus:outline-none p-4 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-600 file:text-white hover:file:bg-indigo-700'
                    },
                    'label': false
                }) }}
                {{ form_errors(form.imageFile) }}
                <p class="text-xs text-gray-500 mt-2">Formats acceptés : JPG, PNG, WebP • Max 5 Mo</p>
            </div>
        </div>
    </div>

    {# Bouton Submit #}
    <div class="pt-6">
        <button type="submit" 
                class="w-full md:w-auto px-8 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-semibold rounded-xl shadow-lg transform hover:scale-105 transition-all duration-300 flex items-center justify-center space-x-2">
            <i class="fas fa-save"></i>
            <span>{{ button_label|default('Enregistrer') }}</span>
        </button>
    </div>

{{ form_end(form) }}