{% extends 'base.html.twig' %}

{% block title %}{{ auteur.nom }} {{ auteur.prenom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    {# Carte de profil #}
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        {# En-tête avec photo ou avatar #}
        <div class="h-32 bg-gradient-to-r from-indigo-500 to-purple-600 relative">
            <div class="absolute -bottom-12 left-8">
                {% if auteur.photo %}
                    <img src="{{ asset(auteur.getPhotoUrl()) }}" 
                         alt="{{ auteur.nom }}" 
                         class="h-24 w-24 rounded-full border-4 border-white shadow-lg object-cover">
                    <div class="text-xs text-gray-500 mt-2">Fichier: {{ auteur.photo }}</div>
                {% else %}
                    <div class="h-24 w-24 rounded-full border-4 border-white shadow-lg bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center text-white text-3xl font-bold">
                        {{ auteur.prenom|first }}{{ auteur.nom|first }}
                    </div>
                {% endif %}
            </div>
        </div>

        {# Contenu #}
        <div class="pt-16 pb-8 px-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">{{ auteur.prenom }} {{ auteur.nom }}</h1>
                    <p class="text-gray-600 mt-1">{{ auteur.email }}</p>
                </div>
                <span class="inline-flex px-4 py-2 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                    <i class="fas fa-globe mr-2 mt-1"></i>{{ auteur.nationalite }}
                </span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Informations</h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">ID</span>
                            <span class="font-mono text-sm bg-gray-200 px-2 py-1 rounded">#{{ auteur.id }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Date de naissance</span>
                            <span class="font-semibold">
                                {{ auteur.dateNaissance ? auteur.dateNaissance|date('d/m/Y') : '-' }}
                            </span>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Contact</h3>
                    <div class="space-y-3">
                        <a href="mailto:{{ auteur.email }}" 
                           class="flex items-center text-indigo-600 hover:text-indigo-800 transition-colors">
                            <i class="fas fa-envelope mr-3"></i>
                            <span>{{ auteur.email }}</span>
                        </a>
                    </div>
                </div>
            </div>

            {# Biographie #}
            {% if auteur.biographie %}
            <div class="bg-indigo-50 rounded-xl p-6 mb-8">
                <h3 class="text-sm font-semibold text-indigo-900 uppercase tracking-wider mb-3">
                    <i class="fas fa-user-edit mr-2"></i>Biographie
                </h3>
                <p class="text-gray-700 leading-relaxed">{{ auteur.biographie }}</p>
            </div>
            {% endif %}

            {# Actions #}
            <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                <a href="{{ path('app_auteur_index') }}" 
                   class="text-gray-600 hover:text-gray-900 flex items-center transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                </a>
                <div class="space-x-3">
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" 
                       class="inline-flex items-center px-5 py-2.5 text-sm font-medium rounded-lg text-white bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-edit mr-2"></i> Modifier
                    </a>
                    {{ include('auteur/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}