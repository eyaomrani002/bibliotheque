{% extends 'base.html.twig' %}

{% block title %}Avis #{{ avi.id }} - Biblio-Symfony{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center gap-4">
                    <a href="{{ path('app_avis_index') }}" 
                       class="w-10 h-10 bg-white dark:bg-gray-800 rounded-xl shadow flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Détails de l'avis</h1>
                        <p class="text-gray-600 dark:text-gray-400">Avis #{{ avi.id }}</p>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <a href="{{ path('app_avis_edit', {'id': avi.id}) }}" 
                       class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white rounded-xl shadow transition-colors">
                        <i class="fas fa-edit"></i>
                        Modifier
                    </a>
                    <button onclick="openDeleteModal({{ avi.id }})"
                            class="inline-flex items-center gap-2 px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-xl shadow transition-colors">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </button>
                </div>
            </div>

            <!-- Carte principale -->
            <div class="grid lg:grid-cols-3 gap-8">
                <!-- Contenu principal -->
                <div class="lg:col-span-2">
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6">
                        <!-- Note -->
                        <div class="text-center mb-6">
                            <div class="w-20 h-20 bg-gradient-to-br from-amber-400 to-orange-500 rounded-2xl flex flex-col items-center justify-center text-white font-bold mx-auto mb-4">
                                <span class="text-3xl">{{ avi.note }}</span>
                                <span class="text-sm">/5</span>
                            </div>
                            <div class="flex justify-center mb-2">
                                {% for i in 1..5 %}
                                    <i class="fas fa-star text-amber-400 text-xl {{ i > avi.note ? 'opacity-30' : '' }}"></i>
                                {% endfor %}
                            </div>
                            <p class="text-gray-600 dark:text-gray-400">Note attribuée</p>
                        </div>

                        <!-- Commentaire -->
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                                <i class="fas fa-comment text-blue-500"></i>
                                Commentaire
                            </h3>
                            {% if avi.commentaire %}
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4">
                                    <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                                        {{ avi.commentaire }}
                                    </p>
                                </div>
                            {% else %}
                                <p class="text-gray-500 dark:text-gray-400 italic text-center py-4">
                                    Aucun commentaire
                                </p>
                            {% endif %}
                        </div>

                        <!-- Livre concerné -->
                        {% if avi.livre %}
                        <div class="mb-6">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                                <i class="fas fa-book text-purple-500"></i>
                                Livre concerné
                            </h3>
                            <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4">
                                <p class="text-gray-700 dark:text-gray-300 font-medium">
                                    {{ avi.livre.titre }}
                                </p>
                                {% if avi.livre.auteurs|length > 0 %}
                                    <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
                                        Par {{ avi.livre.auteurs|first.prenom }} {{ avi.livre.auteurs|first.nom }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Sidebar informations -->
                <div class="space-y-6">
                    <!-- Statut -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Informations</h3>
                        <div class="space-y-4">
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400">Statut</p>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{ avi.isActive ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' }}">
                                    {{ avi.isActive ? 'Actif' : 'Inactif' }}
                                </span>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400">Date de création</p>
                                <p class="text-gray-900 dark:text-white font-medium">
                                    {{ avi.dateCreation ? avi.dateCreation|date('d/m/Y à H:i') : '-' }}
                                </p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400">Auteur de l'avis</p>
                                <p class="text-gray-900 dark:text-white font-medium">
                                    {{ avi.user ? avi.user.email : 'Anonyme' }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Actions rapides -->
                    <div class="bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-2xl shadow-lg p-6">
                        <h3 class="text-lg font-semibold mb-4">Actions</h3>
                        <div class="space-y-3">
                            <a href="{{ path('app_avis_edit', {'id': avi.id}) }}" 
                               class="flex items-center gap-3 p-3 bg-white/10 hover:bg-white/20 rounded-xl transition-colors">
                                <i class="fas fa-edit"></i>
                                Modifier l'avis
                            </a>
                            <a href="{{ path('app_avis_index') }}" 
                               class="flex items-center gap-3 p-3 bg-white/10 hover:bg-white/20 rounded-xl transition-colors">
                                <i class="fas fa-list"></i>
                                Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Inclure le formulaire de suppression -->
{% include 'avis/_delete_form.html.twig' %}

<!-- Modal de suppression (identique à l'index) -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <!-- Contenu identique à l'index -->
</div>
{% endblock %}