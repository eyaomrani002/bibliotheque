{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        {# En-tête #}
        <div class="bg-gradient-to-r from-green-500 to-teal-600 px-8 py-6">
            <h1 class="text-2xl font-bold text-white flex items-center">
                <i class="fas fa-plus-circle mr-3 text-3xl"></i>
                Créer une Nouvelle Catégorie
            </h1>
            <p class="text-green-100 mt-2">Ajoutez une nouvelle catégorie à votre système</p>
        </div>

        {# Contenu du formulaire #}
        <div class="p-8">
            {{ include('categorie/_form.html.twig', {'button_label': 'Créer la catégorie'}) }}
            
            <div class="mt-8 pt-6 border-t border-gray-200">
                <a href="{{ path('app_categorie_index') }}" 
                   class="text-gray-600 hover:text-gray-900 flex items-center transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}