{# templates/contact/admin_messages.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Messages envoyés aux utilisateurs - Admin{% endblock %}

{% block body %}
<div class="min-h-screen py-12">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold">Messages envoyés aux utilisateurs</h1>
      <a href="{{ path('app_contact_admin_new') }}" class="px-4 py-2 bg-green-500 text-white rounded-lg shadow-sm">Nouveau message</a>
    </div>

    {% if messages is empty %}
      <div class="bg-white p-6 rounded-lg shadow">Aucun message envoyé.</div>
    {% else %}
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Destinataire</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sujet</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for m in messages %}
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ m.destinataire ? m.destinataire.email : m.email }}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{ m.sujet }}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ m.dateEnvoi ? m.dateEnvoi|date('d/m/Y H:i') : '-' }}</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a href="{{ path('app_contact_show', {'id': m.id}) }}" class="text-indigo-600 hover:text-indigo-900">Voir</a>
                  <a href="{{ path('app_contact_edit', {'id': m.id}) }}" class="ml-4 text-green-600 hover:text-green-900">Répondre</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}
