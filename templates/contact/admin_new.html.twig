{# templates/contact/admin_new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Envoyer un message utilisateur - Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-indigo-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="bg-gradient-to-r from-green-500 to-emerald-600 px-6 py-4">
        <h2 class="text-xl font-semibold text-white flex items-center gap-3">
          <i class="fas fa-envelope-open-text"></i>
          Envoyer un message Ã  un utilisateur
        </h2>
      </div>

      <div class="p-6">
        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

          <div class="space-y-4">
            {{ form_row(form.destinataire) }}
            {{ form_row(form.sujet) }}
            {{ form_row(form.message) }}
          </div>

          <div class="pt-4">
            <button type="submit" class="px-6 py-3 bg-green-500 text-white rounded-lg shadow hover:bg-green-600">Envoyer le message</button>
            <a href="{{ path('app_contact_admin_messages') }}" class="ml-4 text-sm text-gray-600 hover:underline">Retour aux messages</a>
          </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
