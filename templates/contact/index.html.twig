{% extends 'base.html.twig' %}

{% block title %}Messages contact{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4">Messages reçus</h1>

    <table class="w-full table-auto border-collapse">
        <thead>
            <tr class="bg-gray-100">
                <th class="p-2">#</th>
                <th class="p-2">Nom</th>
                <th class="p-2">Email</th>
                <th class="p-2">Sujet</th>
                <th class="p-2">Date</th>
                <th class="p-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr class="border-t">
                    <td class="p-2">{{ contact.id }}</td>
                    <td class="p-2">{{ contact.nomComplet }}</td>
                    <td class="p-2">{{ contact.email }}</td>
                    <td class="p-2">{{ contact.sujet }}</td>
                    <td class="p-2">{{ contact.dateEnvoi ? contact.dateEnvoi|date('Y-m-d H:i') : '' }}</td>
                    <td class="p-2">
                        <a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="text-blue-600 mr-2">Voir</a>
                        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="text-yellow-600 mr-2">Éditer</a>
                        <form method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                            <button class="text-red-600" onclick="return confirm('Supprimer ce message ?');">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="p-4">Aucun message</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
