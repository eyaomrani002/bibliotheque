{# templates/contact/my_message.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Messages - Bibliothèque{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-3 bg-white dark:bg-gray-800 px-6 py-3 rounded-2xl shadow-lg mb-6">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-envelope-open-text text-white text-lg"></i>
                </div>
                <div class="text-left">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Mes Messages</h1>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">Historique de mes conversations avec l'administration</p>
                </div>
            </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border-l-4 border-blue-500">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">
                        <i class="fas fa-paper-plane text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total envoyés</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ contacts|length }}</p>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border-l-4 border-green-500">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                        <i class="fas fa-reply text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Avec réponse</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">
                            {{ contacts|filter(c => c.reponse)|length }}
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border-l-4 border-purple-500">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400">
                        <i class="fas fa-clock text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600 dark:text-gray-400">En attente</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white">
                            {{ contacts|filter(c => not c.reponse)|length }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des messages -->
        <div class="space-y-6">
            {% if contacts is not empty %}
                {% for contact in contacts %}
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
                        <!-- En-tête du message -->
                        <div class="bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-700 px-6 py-4 border-b border-gray-200 dark:border-gray-600">
                            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                                        {{ contact.prenom|first|upper }}{{ contact.nom|first|upper }}
                                    </div>
                                    <div>
                                        <h3 class="font-semibold text-gray-900 dark:text-white text-lg">
                                            {{ contact.sujet ?: '(Sans objet)' }}
                                        </h3>
                                        <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400 mt-1">
                                            <span class="flex items-center gap-1">
                                                <i class="fas fa-calendar"></i>
                                                {{ contact.dateEnvoi ? contact.dateEnvoi|date('d/m/Y à H:i') : '' }}
                                            </span>
                                            <span class="flex items-center gap-1">
                                                <i class="fas fa-tag"></i>
                                                {{ contact.statut|default('nouveau') }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-2">
                                    {% if contact.estLu %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                                            <i class="fas fa-check mr-1"></i> Lu
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400">
                                            <i class="fas fa-clock mr-1"></i> Non lu
                                        </span>
                                    {% endif %}
                                    
                                    {% if contact.reponse %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                                            <i class="fas fa-reply mr-1"></i> Répondu
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400">
                                            <i class="fas fa-clock mr-1"></i> En attente
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Contenu du message -->
                        <div class="p-6 space-y-6">
                            <!-- Message original -->
                            <div class="space-y-3">
                                <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                                    <i class="fas fa-user-circle"></i>
                                    <span class="font-medium">{{ contact.nomComplet }}</span>
                                    <span class="text-gray-400">•</span>
                                    <span>{{ contact.email }}</span>
                                </div>
                                <div class="prose max-w-none dark:prose-invert">
                                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-xl p-4 border-l-4 border-blue-500">
                                        <p class="text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-wrap">
                                            {{ contact.message|raw }}
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Réponse de l'admin -->
                            {% if contact.reponse %}
                                <div class="space-y-3">
                                    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                                        <i class="fas fa-user-shield text-green-600"></i>
                                        <span class="font-medium text-green-600 dark:text-green-400">Réponse de l'administration</span>
                                        {% if contact.dateReponse %}
                                            <span class="text-gray-400">•</span>
                                            <span>Le {{ contact.dateReponse|date('d/m/Y à H:i') }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="prose max-w-none dark:prose-invert">
                                        <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-4 border-l-4 border-green-500 shadow-sm">
                                            <p class="text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-wrap">
                                                {{ contact.reponse|raw }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <!-- Message d'attente -->
                                <div class="text-center py-8">
                                    <div class="w-16 h-16 bg-gradient-to-br from-yellow-100 to-amber-100 dark:from-yellow-900/20 dark:to-amber-900/20 rounded-full flex items-center justify-center mx-auto mb-4">
                                        <i class="fas fa-clock text-2xl text-yellow-600 dark:text-yellow-400"></i>
                                    </div>
                                    <h4 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                        En attente de réponse
                                    </h4>
                                    <p class="text-gray-500 dark:text-gray-400 text-sm max-w-md mx-auto">
                                        Notre équipe administratrice traitera votre message dans les plus brefs délais.
                                    </p>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Actions -->
                        <div class="bg-gray-50 dark:bg-gray-700/50 px-6 py-4 border-t border-gray-200 dark:border-gray-600">
                            <div class="flex items-center justify-between">
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    Référence : #{{ contact.id }}
                                </div>
                                <div class="flex items-center gap-2">
                                    {% if not contact.reponse %}
                                        <a href="{{ path('app_contact_my_edit', {'id': contact.id}) }}" 
                                           class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                                            <i class="fas fa-edit"></i>
                                            Modifier
                                        </a>
                                    {% endif %}
                                    
                                    <form method="post" 
                                          action="{{ path('app_contact_my_delete', {'id': contact.id}) }}" 
                                          class="inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce message ? Cette action est irréversible.');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                                        <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors">
                                            <i class="fas fa-trash"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <!-- État vide -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-600 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-envelope text-3xl text-gray-400 dark:text-gray-500"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-700 dark:text-gray-300 mb-4">
                        Aucun message envoyé
                    </h3>
                    <p class="text-gray-500 dark:text-gray-400 max-w-md mx-auto mb-8">
                        Vous n'avez pas encore contacté notre équipe d'administration.
                        N'hésitez pas à nous faire part de vos questions ou suggestions !
                    </p>
                    <a href="{{ path('app_contact_new') }}" class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-semibold shadow-lg transition-all transform hover:scale-105">
                        <i class="fas fa-plus"></i>
                        Nouveau message
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Pagination -->
        {% if contacts|length > 10 %}
            <div class="mt-12 flex justify-center">
                <nav class="flex items-center gap-2">
                    <button class="w-10 h-10 flex items-center justify-center bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    
                    {% for i in 1..((contacts|length / 10)|round(0, 'ceil')) %}
                        <button class="w-10 h-10 flex items-center justify-center bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors font-medium">
                            {{ i }}
                        </button>
                    {% endfor %}
                    
                    <button class="w-10 h-10 flex items-center justify-center bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </nav>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}