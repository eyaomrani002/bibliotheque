{% extends 'base.html.twig' %}

{% block title %}Message - Contact #{{ contact.id }}{% endblock %}

{% block body %}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4 sm:px-6 lg:px-8"> <div class="max-w-4xl mx-auto"> <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-white/50"> <!-- Header --> <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-4"> <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between"> <div class="flex items-center space-x-3"> <div class="p-2 bg-white/20 rounded-lg"> <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/> </svg> </div> <h1 class="text-2xl font-bold text-white">Message #{{ contact.id }}</h1> </div> <a href="{{ path('app_contact_my') }}" class="mt-3 sm:mt-0 inline-flex items-center px-4 py-2 bg-white/20 hover:bg-white/30 text-white rounded-lg transition-all duration-200 text-sm font-medium"> <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/> </svg> Retour aux messages </a> </div> </div>
        <!-- Content -->
        <div class="p-6 space-y-6">
            <!-- Sender Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-blue-100 rounded-lg">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-blue-900">De</p>
                            <p class="text-lg font-semibold text-gray-900">{{ contact.nomComplet ?: contact.email }}</p>
                            <p class="text-sm text-blue-600">{{ contact.email }}</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-purple-50 rounded-xl p-4 border border-purple-100">
                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-purple-100 rounded-lg">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-purple-900">Sujet</p>
                            <p class="text-lg font-semibold text-gray-900">{{ contact.sujet }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Message -->
            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200">
                <div class="flex items-center space-x-2 mb-4">
                    <div class="p-2 bg-gray-200 rounded-lg">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900">Message</h3>
                </div>
                <div class="prose prose-blue max-w-none bg-white rounded-xl p-6 border border-gray-200">
                    {{ contact.message|raw }}
                </div>
                <div class="flex items-center justify-end mt-4 text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Envoyé le {{ contact.dateEnvoi ? contact.dateEnvoi|date('d/m/Y à H:i') : '' }}
                </div>
            </div>

            <!-- Response -->
            {% if contact.reponse %}
            <div class="bg-green-50 rounded-2xl p-6 border border-green-200">
                <div class="flex items-center space-x-2 mb-4">
                    <div class="p-2 bg-green-100 rounded-lg">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-green-900">Réponse</h3>
                </div>
                <div class="prose prose-green max-w-none bg-white rounded-xl p-6 border border-green-200">
                    {{ contact.reponse|raw }}
                </div>
                <div class="flex items-center justify-end mt-4 text-sm text-green-600">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Répondu le {{ contact.dateReponse ? contact.dateReponse|date('d/m/Y à H:i') : '' }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
</div> {% endblock %}
