{% extends 'base.html.twig' %}

{% block title %}Gestion des √âditeurs{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-7xl">
    {# En-t√™te avec titre et bouton #}
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">üè¢ Gestion des √âditeurs</h1>
            <p class="text-gray-600 mt-2">G√©rez vos maisons d'√©dition</p>
        </div>
        <a href="{{ path('app_editeur_new') }}" 
           class="bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white px-6 py-3 rounded-xl shadow-lg transition-all duration-300 flex items-center space-x-2 transform hover:scale-105">
            <i class="fas fa-plus-circle"></i>
            <span>Nouvel √âditeur</span>
        </a>
    </div>

    {# Tableau moderne #}
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gradient-to-r from-gray-800 to-gray-900">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">√âditeur</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-white uppercase tracking-wider">Localisation</th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-white uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for editeur in editeurs %}
                        <tr class="hover:bg-indigo-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-mono text-gray-500">#{{ editeur.id }}</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full flex items-center justify-center text-white font-semibold">
                                        {{ editeur.nom|first|upper }}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-semibold text-gray-900">{{ editeur.nom }}</div>
                                        <div class="text-xs text-gray-500">
                                            <a href="mailto:{{ editeur.email }}" class="text-indigo-600 hover:text-indigo-800">
                                                <i class="fas fa-envelope mr-1"></i>{{ editeur.email }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-700">
                                    <i class="fas fa-phone mr-1 text-gray-400"></i>{{ editeur.telephone ?: '-' }}
                                </div>
                                <div class="text-xs text-gray-500">
                                    <a href="{{ editeur.siteWeb }}" target="_blank" class="text-indigo-600 hover:text-indigo-800">
                                        <i class="fas fa-globe mr-1"></i>{{ editeur.siteWeb ? editeur.siteWeb|replace({'http://': '', 'https://': ''}) : '-' }}
                                    </a>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm text-gray-700">{{ editeur.ville }}, {{ editeur.pays }}</span>
                                <div class="text-xs text-gray-500">{{ editeur.codePostal }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                                <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}" 
                                   class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg text-blue-700 bg-blue-100 hover:bg-blue-200 transition-colors">
                                    <i class="fas fa-eye mr-1"></i> Voir
                                </a>
                                <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}" 
                                   class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg text-amber-700 bg-amber-100 hover:bg-amber-200 transition-colors">
                                    <i class="fas fa-edit mr-1"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <i class="fas fa-building text-5xl text-gray-300 mb-4"></i>
                                <p class="text-gray-500 text-lg">Aucun √©diteur trouv√©</p>
                                <a href="{{ path('app_editeur_new') }}" class="mt-4 inline-block text-indigo-600 hover:text-indigo-800">
                                    Cr√©er votre premier √©diteur ‚Üí
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Footer avec stats #}
    {% if editeurs|length > 0 %}
    <div class="mt-6 flex justify-between items-center text-sm text-gray-600">
        <span>{{ editeurs|length }} √©diteur(s) au total</span>
        <span>Mis √† jour √† l'instant</span>
    </div>
    {% endif %}
</div>
{% endblock %}