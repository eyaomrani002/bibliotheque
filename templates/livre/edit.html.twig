{% extends 'base.html.twig' %}

{% block title %}Modifier {{ livre.titre }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        {# En-tête #}
        <div class="bg-gradient-to-r from-amber-500 to-orange-600 px-8 py-6">
            <h1 class="text-2xl font-bold text-white flex items-center">
                <i class="fas fa-book mr-3 text-3xl"></i>
                Modifier le Livre
            </h1>
            <p class="text-amber-100 mt-2">Edition de « {{ livre.titre }} »</p>
        </div>

        {# Contenu du formulaire #}
        <div class="p-8">
            {{ include('livre/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            
            <div class="mt-8 pt-6 border-t border-gray-200 flex justify-between">
                <a href="{{ path('app_livre_index') }}" 
                   class="text-gray-600 hover:text-gray-900 flex items-center transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                </a>
                {{ include('livre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}