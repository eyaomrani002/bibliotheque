{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-5xl">
    {# Carte de profil #}
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        {# En-tête avec avatar #}
        <div class="h-32 bg-gradient-to-r from-green-500 to-teal-600 relative">
            <div class="absolute -bottom-12 left-8">
                {% if livre.image %}
                    <img src="{{ livre.imageUrl }}" alt="{{ livre.titre }}" class="h-32 w-28 object-cover rounded-xl shadow-2xl border-4 border-white">
                {% else %}
                    <div class="h-32 w-28 bg-gradient-to-br from-green-400 to-teal-500 rounded-xl flex items-center justify-center text-white text-6xl font-bold shadow-2xl border-4 border-white">
                        <i class="fas fa-book"></i>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Contenu #}
        <div class="pt-16 pb-8 px-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">{{ livre.titre }}</h1>
                    <p class="text-gray-600 mt-1">Livre #{{ livre.id }}</p>
                </div>
                <div class="text-right">
                    <span class="inline-flex px-4 py-2 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-tag mr-2 mt-1"></i>{{ livre.isbn }}
                    </span>
                    <div class="mt-2">
                        {% if livre.qte > 0 %}
                            <span class="inline-flex items-center px-2.5 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i>{{ livre.qte }} en stock
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                <i class="fas fa-times-circle mr-1"></i>Rupture
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                {# Infos principales #}
                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">
                        <i class="fas fa-info-circle mr-2"></i>Informations
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">ID</span>
                            <span class="font-mono text-sm bg-gray-200 px-2 py-1 rounded">#{{ livre.id }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Pages</span>
                            <span class="font-semibold">{{ livre.nbpages }} p.</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Langue</span>
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                {{ livre.langue }}
                            </span>
                        </div>
                        {% if livre.pdf %}
                        <div class="flex justify-between">
                            <span class="text-gray-600">Fichier</span>
                            <span>
                                <a href="{{ livre.pdfUrl }}" target="_blank" class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md bg-blue-600 text-white hover:bg-blue-700">
                                    <i class="fas fa-file-pdf mr-2"></i>Ouvrir le PDF
                                </a>
                            </span>
                        </div>
                        {% endif %}
                    </div>
                </div>

                {# Publication #}
                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">
                        <i class="fas fa-calendar mr-2"></i>Publication
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Date</span>
                            <span class="font-semibold">
                                {{ livre.datpub ? livre.datpub|date('d/m/Y') : '-' }}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Prix</span>
                            <span class="font-bold text-green-700">{{ livre.prix }} €</span>
                        </div>
                    </div>
                </div>

                {# Stock #}
                <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">
                        <i class="fas fa-warehouse mr-2"></i>Stock
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Quantité</span>
                            <span class="font-semibold">{{ livre.qte }} exemplaire(s)</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Disponibilité</span>
                            {% if livre.qte > 0 %}
                                <span class="text-green-600 font-semibold">
                                    <i class="fas fa-check-circle"></i> Disponible
                                </span>
                            {% else %}
                                <span class="text-red-600 font-semibold">
                                    <i class="fas fa-times-circle"></i> Rupture
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {# Résumé #}
            {% if livre.resume %}
            <div class="bg-green-50 rounded-xl p-6 mb-8">
                <h3 class="text-sm font-semibold text-green-900 uppercase tracking-wider mb-3">
                    <i class="fas fa-align-left mr-2"></i>Résumé
                </h3>
                <p class="text-gray-700 leading-relaxed">{{ livre.resume }}</p>
            </div>
            {% endif %}

            {# Actions #}
            <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                <a href="{{ path('app_livre_index') }}" 
                   class="text-gray-600 hover:text-gray-900 flex items-center transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                </a>
                <div class="space-x-3">
                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" 
                       class="inline-flex items-center px-5 py-2.5 text-sm font-medium rounded-lg text-white bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-edit mr-2"></i> Modifier
                    </a>
                    {{ include('livre/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}