                    <div class="flex flex-col sm:flex-row gap-3 justify-center sm:justify-start">
                        <a href="{{ path('app_profile_edit') }}" 
                           class="group inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 transition-all duration-200 transform hover:-translate-y-1 shadow-lg hover:shadow-xl">
