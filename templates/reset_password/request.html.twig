{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Biblio-Symfony{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 via-white to-indigo-50 py-12 px-4">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden w-full max-w-md transform transition-all duration-300">
        {# En-tête #}
        <div class="bg-gradient-to-r from-orange-500 to-amber-600 px-8 py-8 text-center relative overflow-hidden">
            <div class="absolute inset-0 bg-white opacity-10 transform rotate-12"></div>
            <i class="fas fa-key text-5xl text-white mb-4 relative z-10 drop-shadow-lg"></i>
            <h1 class="text-2xl font-bold text-white relative z-10">Mot de passe oublié</h1>
            <p class="text-orange-100 mt-2 relative z-10">Réinitialisez votre accès</p>
        </div>

        {# Messages d'erreur #}
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="mx-6 mt-6 bg-red-50 border-l-4 border-red-500 rounded-lg p-4 text-red-700 flex items-center shadow-sm">
                <i class="fas fa-exclamation-triangle mr-3 text-xl flex-shrink-0"></i>
                <span class="text-sm">{{ flash_error }}</span>
            </div>
        {% endfor %}

        {# Formulaire #}
        <div class="p-8">
            {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
                
                {# Champ Email #}
                <div class="space-y-2">
                    {{ form_label(requestForm.email, null, {
                        'label_attr': {
                            'class': 'block text-sm font-semibold text-gray-700 mb-2 flex items-center'
                        }
                    }) }}
                    <div class="relative">
                        {{ form_widget(requestForm.email, {
                            'attr': {
                                'class': 'w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 bg-gray-50 hover:bg-white',
                                'placeholder': 'votre@email.com'
                            }
                        }) }}
                        <i class="fas fa-envelope absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                    {{ form_errors(requestForm.email) }}
                </div>

                {# Instructions #}
                <div class="bg-blue-50 border-l-4 border-blue-500 rounded-lg p-4">
                    <p class="text-sm text-blue-700 flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mr-2 mt-0.5 flex-shrink-0"></i>
                        Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>
                </div>

                {# Bouton #}
                <button type="submit" 
                        class="w-full px-8 py-3 bg-gradient-to-r from-orange-500 to-amber-600 hover:from-orange-600 hover:to-amber-700 text-white font-semibold rounded-xl shadow-lg transform transition-all duration-300 flex items-center justify-center space-x-2 hover:scale-105 active:scale-95">
                    <i class="fas fa-paper-plane"></i>
                    <span>Envoyer le lien de réinitialisation</span>
                </button>

            {{ form_end(requestForm) }}

            {# Liens #}
            <div class="mt-8 pt-6 border-t border-gray-200 space-y-4 text-center">
                <a href="{{ path('app_login') }}" 
                   class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-800 font-medium transition-all duration-200 group">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Retour à la connexion
                    <i class="fas fa-arrow-right ml-1 text-xs transform transition-transform group-hover:translate-x-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}