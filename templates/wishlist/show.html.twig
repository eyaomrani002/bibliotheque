{% extends 'base.html.twig' %}

{% block title %}Wishlist #{{ wishlist.id }}{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto space-y-6 py-8">
    <div class="bg-white/80 dark:bg-gray-900/70 rounded-2xl shadow-lg p-6 backdrop-blur">
        <div class="flex items-start justify-between mb-4">
            <div>
                <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Wishlist #{{ wishlist.id }}</h2>
                <p class="text-sm text-gray-500 dark:text-gray-400">Propriétaire: {{ wishlist.user ? wishlist.user.email : '—' }}</p>
            </div>
            <div class="flex items-center gap-2">
                <a href="{{ path('app_wishlist_edit', {'id': wishlist.id}) }}" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-white font-semibold rounded-full shadow-lg transition-transform transform hover:-translate-y-0.5">
                    <i class="fas fa-edit mr-2"></i>
                    Modifier
                </a>
                {{ include('wishlist/_delete_form.html.twig') }}
            </div>
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-700 dark:text-gray-300">
            <div>
                <dt class="font-medium text-gray-500">Date d'ajout</dt>
                <dd class="mt-1">{{ wishlist.dateAjout ? wishlist.dateAjout|date('d/m/Y H:i') : '-' }}</dd>
            </div>
        </dl>

        <div class="mt-6">
            <a href="{{ path('app_wishlist_index') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>
                Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
